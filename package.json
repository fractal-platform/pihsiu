{
  "version": "0.1.5",
  "private": true,
  "build": {
    "files": [
      "./dist/**/*",
      "./pages/**/*",
      "./node_modules/**/*"
    ],
    "appId": "com.fractal.pihsiu",
    "asar": false
  },
  "scripts": {
    "release": "node ./scripts/release.ext.js",
    "start:electron": "electron app/dist/main/main",
    "clean": "rimraf ./release && rimraf ./dist && mkdirp  ./dist/extensions",
    "dev:electron": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:main": "ESLINT=none BROWSER=none COMPRESS=none roadhog build -w",
    "dev:renderer": "cross-env APP_ROOT=src/renderer umi dev",
    "dev:ext": "npm run clean && npm run build:renderer && npm run watch:background",
    "dapp": "static-server test/dapp --port 3000",
    "build:electron": "npm run build:main && npm run build:renderer",
    "build:main": "cross-env ESLINT=none roadhog build",
    "build:renderer": "cross-env APP_ROOT=src/renderer umi build && cpr ./dist/renderer/ ./dist/extensions/",
    "build:ext": "npm run clean && npm run build:renderer && node ./scripts/build.ext.js --env.production",
    "watch:ext": "concurrently \"npm run clean\" \"npm run watch:renderer\" \"npm run watch:background\" ",
    "watch:renderer": "watch \"npm run build:renderer\" ./src/renderer -d --wait 30",
    "watch:background": "node ./scripts/build.ext.js --env.development --watch.true",
    "test": "umi test",
    "lint": "eslint --ext .js src",
    "precommit": "lint-staged",
    "pack": "npm run build && npm run rebuild && build",
    "pack:dir": "npm run build && npm run rebuild && build --dir",
    "pack:dirOnly": "build --dir",
    "rebuild": "electron-rebuild -m ./app"
  },
  "dependencies": {
    "@ant-design/icons": "^2.1.1",
    "@ant-design/icons-react": "^2.0.1",
    "@trust/webcrypto": "^0.9.2",
    "asmcrypto.js": "^2.3.2",
    "await-semaphore": "^0.1.1",
    "classnames": "^2.2.6",
    "copy-to-clipboard": "^3.2.0",
    "debounce-stream": "^2.0.0",
    "dva": "^2.6.0-beta.6",
    "eth-keyring-controller": "^4.0.1",
    "ethereumjs-util": "github:ethereumjs/ethereumjs-util#ac5d0908536b447083ea422b435da27f26615de9",
    "eventemitter3": "^4.0.0",
    "extensionizer": "^1.0.1",
    "fast-json-patch": "^2.0.4",
    "lodash": "^4.17.15",
    "obs-store": "^3.0.2",
    "promise-to-callback": "^1.0.0",
    "qrcode.react": "^0.9.3",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-jazzicon": "^0.1.3",
    "text-encoding": "0.7.0",
    "rubanjs": "^0.1.5"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "babel-eslint": "^9.0.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-static-fs": "^3.0.0",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "^3.5.1",
    "copy-webpack-plugin": "^5.0.3",
    "electron": "^9.1.0",
    "electron-builder": "^20.44.4",
    "electron-debug": "^3.0.1",
    "electron-rebuild": "^1.8.5",
    "eslint": "^5.4.0",
    "eslint-config-umi": "^1.4.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "react-test-renderer": "^16.7.0",
    "slash": "^2.0.0",
    "static-server": "^2.2.1",
    "umi": "^2.7.7",
    "umi-plugin-react": "^1.8.4",
    "webpack": "^4.38.0",
    "webpack-cli": "^3.3.6",
    "webpack-merge": "^4.2.1",
    "watch": "1.0.2",
    "mkdirp": "^0.5.1",
    "rimraf": "^3.0.0",
    "cross-env": "^6.0.3",
    "cpr": "^3.0.1"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "engines": {
    "node": ">=8.0.0"
  }
}
